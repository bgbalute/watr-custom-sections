{{ 'section-why-watr.css' | asset_url | stylesheet_tag }}
{{ 'flickity.min.css' | asset_url | stylesheet_tag }}

<script src="{{ 'flickity.pkgd.min.js' | asset_url }}" defer="defer"></script>
<script src="{{ 'slider-config.js' | asset_url }}" defer="defer"></script>

{% render 'margin' %}

<div class="why-watr">
    <div class="why-watr-section page-width section-{{ section.id }}-margin">
    
    <h2 class="h4 standard__heading why-watr-title">{{ section.settings.why-watr-title }} <img class="heading__logo" src="https://cdn.shopify.com/s/files/1/0550/3572/3997/files/logo-text.png?v=1651930169" alt=""></h2>
    

    <div class="main-carousel">      
      {% for block in section.blocks %}
        {%- if block.settings.why-watr-image != blank -%}
        	<div  class="carousel-cell">
                <div class="carousel-content">
                    <img class="why-watr__image" src="{{ block.settings.why-watr-image | img_url: '100x' }}" alt="" />
                    <p class="why-watr__name">{{ block.settings.why-watr-name }}</p>
                </div>
            </div>
        {%- endif -%}
      {% endfor %}
    </div>

  </div>
</div>

{% schema %}
{
  "name": "CS - Why Watr",
  "settings": [
    {
      "type": "header",
      "content": "Why Watr"
    },
    {
      "type": "text",
      "id": "why-watr-title",
      "label": "Title",
      "default": "Why Drink Watr"
    },
    {
      "type": "header",
      "content": "Section Margin"
    },
    {
      "type": "range",
      "id": "margin_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Margin Top",
      "default": 36
    },
    {
      "type": "range",
      "id": "margin_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Margin Bottom",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "header",
      "name": "Upload Images",
      "settings": [
        {
          "type": "image_picker",
          "label": "Upload Icon",
          "id": "why-watr-image"
        },
        {
          "type": "text",
          "id": "why-watr-name",
          "label": "Icon Label",
          "default": "SUGAR FREE"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Why Watr"
    }
  ]
}
{% endschema %}