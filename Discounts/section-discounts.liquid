{{ 'section-discounts.css' | asset_url | stylesheet_tag }}

{% render 'margin' %}

<div class="discounts section-{{ section.id }}-margin">
    <div class="discounts-section">
        <div class="discounts-image">
            <a href="{{ section.settings.discounts-link1 }}" class="discounts__link"><img src="{{ section.settings.discounts-image1 | img_url: 'master' }}" alt="" class="discounts__image"></a>
        </div>
        <div class="discounts-image">
            <a href="{{ section.settings.discounts-link2 }}" class="discounts__link"><img src="{{ section.settings.discounts-image2 | img_url: 'master' }}" alt="" class="discounts__image"></a>
        </div>
    </div>
</div>


{% schema %}
{
    "name": "CS - Discounts",
    "settings": [
      {
        "type": "header",
        "content": "Discount 1"
      },
      {
        "type": "image_picker",
        "id": "discounts-image1",
        "label": "Image"
      },
      {
        "type": "url",
        "id": "discounts-link1",
        "label": "Link"
      },
      {
        "type": "header",
        "content": "Discount 2"
      },
      {
        "type": "image_picker",
        "id": "discounts-image2",
        "label": "Image"
      },
      {
        "type": "url",
        "id": "discounts-link2",
        "label": "Link"
      },
      {
        "type": "header",
        "content": "Section Margin"
      },
      {
        "type": "range",
        "id": "margin_top",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "Margin Top",
        "default": 36
      },
      {
        "type": "range",
        "id": "margin_bottom",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "Margin Bottom",
        "default": 36
      }
    ],
    "presets": [
      {
        "name": "Discounts"
      }
    ]
  }
{% endschema %}